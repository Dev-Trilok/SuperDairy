@model Core.Model.Rate
@{
    Layout = null;
}

<h4>Rate</h4>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-12 col-md-10">
        <form id="createRate"  asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MilkType" class="control-label">Milk Type</label>
                <select asp-for="MilkType" class="form-select" asp-items="Html.GetEnumSelectList<Core.MilkType>()"></select>                
                    <span asp-validation-for="MilkType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fat" class="control-label"></label>
                <input asp-for="Fat" class="form-control" />
                <span asp-validation-for="Fat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>*@
        </form>
    </div>
    <div class="col-md-1"></div>
</div>

    
